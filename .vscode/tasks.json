{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test",
            "detail": "compile and run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Run",
            ]
        },
        {
            "label": "Run",
            "detail": "run the program",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "dependsOn": [
                "Compile"
            ]
        },
        {
            "label": "Compile",
            "detail": "compile with g++",
            "type": "shell",
            "command": "g++.exe",
            "args": [
                "-Wall",
                "*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}"
            ],
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}